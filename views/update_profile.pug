extends index

block append stylesheets
    link(rel='stylesheet' href='/css/update_profile.css')

block append scripts
    script(type='module' src='/js/update_profile.js')

block content  
    .container
        form#updateForm(method='post' , enctype='multipart/form-data')
            h1 Update Profile
            .mb-4
                label.profile.d-flex.justify-content-center.mb-2(for='images')
                    if user.profilePhoto
                        img.img-fluid#profile-label(src=user.profilePhoto, alt="photo")
                    else
                        img.img-fluid#profile-label(src='https://cdn-icons-png.flaticon.com/128/3135/3135715.png', alt="photo")
                input.form-control#file(type='file', name="images")
                small Click on the above file picker to update your profile picture
            .mb-4.form-floating
                input.form-control#name(type="text", name="name", placeholder='Name', value=user.name)
                label(for='name') Name
            .mb-4.form-floating
                textarea.form-control#desc(name="desc", placeholder="Description") #{user.description} 
                label(for='desc') Description 
            .mb-4.form-floating
                input.form-control#username(type="text", name="username", placeholder='Username', value=user.username, disabled='true')
                label(for='username') Username
            .mb-4.form-floating
                input.form-control#email(type="email", name="email", placeholder='Email', value=user.email, disabled='true')
                label(for='email') Email
            .mb-4.form-floating
                input.form-control#mobile(type="tel", name="mobile", placeholder='mobile', value=user.mobile, disabled='true')
                label(for='mobile') Mobile
            button#uploadFormSubmitBtn(type="submit") Update
